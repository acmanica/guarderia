    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script>
    <![endif]-->
  </head>
  <body>

    <%= render 'layouts/navigation' %>
    
    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
       <% if current_user %>
        <div class="col-lg-3">
          <div class="well sidebar-nav">
            <h3>Menu</h3>
            <ul class="nav nav-list">
              <li><%= link_to "Log de Actividades", activity_logs_path  %></li>
              <li><%= link_to "Actividades", activities_path  %></li>
              <li><%= link_to "Asistentetes", assistants_path  %></li>
              <li><%= link_to "Bebes", babies_path  %></li>
              <!--<li><%= link_to "Crear Nuevo Bebe", new_baby_path %></li> -->
            </ul>
          </div>
        </div>
       <% end %> 
      </div><!--/row-->



      <footer class="footer navbar-fixed-bottom">
        <p>&copy; Company 2020</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
